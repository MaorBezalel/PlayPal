<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_navigation"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.hit.playpal.home.ui.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_profileActivity"
            app:destination="@id/profile_activity" />
        <action
            android:id="@+id/action_searchFragment_to_chatActivity2"
            app:destination="@id/chatActivity2" />
    </fragment>
    <activity
        android:id="@+id/profile_activity"
        android:name="com.hit.playpal.profile.ui.activities.ProfileActivity"
        android:label="activity_profile"
        tools:layout="@layout/activity_profile" />
    <activity
        android:id="@+id/chatActivity2"
        android:name="com.hit.playpal.chatrooms.ui.activities.ChatActivity"
        android:label="activity_chat"
        tools:layout="@layout/activity_chat" />
</navigation>